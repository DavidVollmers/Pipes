<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>DavidVollmers.Pipes.DependencyInjection</PackageId>
        <Authors>github@david.vollmers.org</Authors>
        <Copyright>David Vollmers</Copyright>
        <Description>Provides classes that support the implementation of the dependency injection software design pattern for DavidVollmers.Pipes.</Description>
        <PackageProjectUrl>https://github.com/DavidVollmers/Pipes</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/DavidVollmers/Pipes.git</RepositoryUrl>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
        <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pipes\Pipes.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0"/>
    </ItemGroup>

</Project>
