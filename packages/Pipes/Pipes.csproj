<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>DavidVollmers.Pipes</PackageId>
        <Authors>github@david.vollmers.org</Authors>
        <Copyright>David Vollmers</Copyright>
        <Description>Simplify complex processes by building pipes from small code units.</Description>
        <PackageProjectUrl>https://github.com/DavidVollmers/Pipes</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/DavidVollmers/Pipes.git</RepositoryUrl>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pipes.Abstractions\Pipes.Abstractions.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
        <Content Include="..\..\README.md">
            <Link>README.md</Link>
        </Content>
        <None Include="LICENSE.txt" Pack="true" PackagePath="\"/>
        <Content Include="..\..\LICENSE.txt">
            <Link>LICENSE.txt</Link>
        </Content>
    </ItemGroup>

</Project>